<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>Feed2Email - @ViewBag.Title</title>

        @Styles.Render("~/Content/bootstrap")

        <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
        <link href="~/Content/themes/adminia-admin-1.1/css/adminia-1.1.css" rel="stylesheet" />
        <link href="~/Content/themes/adminia-admin-1.1/css/adminia-1.1-responsive.css" rel="stylesheet" />
        
        <style>
            * {
                /* Flatten All */
                -webkit-border-radius: 0 !important;
                -moz-border-radius: 0 !important;
                border-radius: 0 !important;
            }

            .btn-inverse {
                /*
                    Light 5678A7 (from 444444), Dark 3C5374 (from 222222)
                    background-color 486A99 (from differences in 444444 - 363636 per colour)
               */
                background-color: #486A99;
                background-image: -moz-linear-gradient(top, #5678A7, #3C5374);
                background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#5678A7), to(#3C5374));
                background-image: -webkit-linear-gradient(top, #5678A7, #3C5374);
                background-image: -o-linear-gradient(top, #5678A7, #3C5374);
                background-image: linear-gradient(to bottom, #5678A7, #3C5374);
                background-repeat: repeat-x;
                border-color: #3C5374 #3C5374 #000000;
                border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
                filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff5678A7', endColorstr='#ff3C5374', GradientType=0);
                filter: progid:DXImageTransform.Microsoft.gradient(enabled=false);
            }

            .btn-inverse:hover,
            .btn-inverse:focus,
            .btn-inverse:active,
            .btn-inverse.active,
            .btn-inverse.disabled,
            .btn-inverse[disabled] {
                color: #ffffff;
                background-color: #3C5374;
            }
        </style>

        @RenderSection("styles", false)
    </head>
    <body>
        
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> 
                        <span class="icon-bar"></span> 
                        <span class="icon-bar"></span> 
                        <span class="icon-bar"></span> 				
                    </a>
            
                    <a class="brand">Feed2Email</a>
                </div>
            </div>
        </div>

        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

        <script src="~/Scripts/adminia-admin-1.1/Application.js"></script>       

        @RenderSection("scripts", false)
    </body>
</html>