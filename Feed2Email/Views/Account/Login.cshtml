@model Feed2Email.Models.Account.LoginViewModel

@{
    ViewBag.LoginHeader = "Login";
}
  
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="control-group">
        @*<span class="text-error pull-right">This is a required field</span>*@
        <label class="control-label" for="Username">Username</label>
        <div class="controls">
            <input id="Username" type="text" name="Username" placeholder="Username" value="@Model.Username">
        </div>
    </div>
    
    <div class="control-group">
        <label class="control-label" for="Password">Password</label>
        <div class="controls">
            <input id="Password" type="password" name="Password" placeholder="Password">
        </div>
    </div>
    
    <div id="remember-me" class="pull-left">
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe)
    </div>
    
    <div class="pull-right">
        <button type="submit" class="btn btn-inverse">
            Login
        </button>
    </div>
}

@section LoginExtra
{
    <p>Don't have an account? <a href="@Url.Action("Register")">Register</a>.</p>
    <p>Forgot your password? <a href="@Url.Action("ResetPassword")">Reset it</a>.</p>
}
