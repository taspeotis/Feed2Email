@model Feed2Email.Models.Account.RegisterFormModel

@{
    ViewBag.LoginHeader = "Register";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    @Html.Bootstrap().ValidationSummary(true)
    
    @Html.Bootstrap().ControlGroup().TextBoxFor(m => m.Username).Placeholder("rlivingston").ShowValidationMessage(false)
    @Html.Bootstrap().ControlGroup().TextBoxFor(m => m.Email).Placeholder("rlivingston@initech.com").ShowValidationMessage(false).HelpText()
    @Html.Bootstrap().ControlGroup().PasswordFor(m => m.Password).Placeholder("P@ssw0rd").ShowValidationMessage(false).HelpText()
    @Html.Bootstrap().ControlGroup().PasswordFor(m => m.ConfirmPassword).Placeholder("P@ssw0rd").ShowValidationMessage(false).HelpText()

    <div class="pull-right">
        <button type="submit" class="btn btn-inverse">Register</button>
    </div>
}

@section LoginExtra
{
    <p>Already have an account? <a href="@Url.Action("Login")">Login</a>.</p>
    <p>Forgot your password? <a href="@Url.Action("ResetPassword")">Reset it</a>.</p>
}